{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "bin",
    "src/**/*.spec.ts",
    "examples",
    "jest.config.ts",
    ".cache",
    "docs"
  ]
}
